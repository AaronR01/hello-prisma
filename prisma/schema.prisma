generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model administrador_sistema {
  id       String   @id @default(uuid())
  nome     String
  senha    String
  email    String
  telefone String
  Fazenda  Fazenda[]
}

model User {
  id               String  @id @default(uuid())
  email            String  @unique
  telefone         String  @unique
  eh_administrador Boolean
  nome             String
  senha            String
  id_fazenda       Fazenda @relation(fields: [id], references: [id])
}

model Fazenda {
  id           String                @id @default(uuid())
  nome         String
  cidade       String
  estado       String
  proprietario String
  id_adm       administrador_sistema @relation(fields: [id], references: [id])
  Lote         Lote[]
  User         User[]
}

model Dieta_Lote {
  id_lote     String
  id_dieta    String
  id_alimento String
  quantidade  Float
  alimento    Alimento @relation(fields: [id_alimento], references: [id])
  dieta       Dieta    @relation(fields: [id_dieta], references: [id])
  lote        Lote     @relation(fields: [id_lote], references: [id])

  @@id([id_lote, id_dieta, id_alimento])
  @@index([id_alimento], map: "Dieta_Lote_id_alimento_fkey")
  @@index([id_dieta], map: "Dieta_Lote_id_dieta_fkey")
}

model Dieta {
  id         String       @id @default(uuid())
  data       DateTime
  Dieta_Lote Dieta_Lote[]
}

model Alimento {
  id         String       @id @default(uuid())
  descricao  String
  nome       String
  Dieta_lote Dieta_Lote[]
}

model Lote {
  id                 String       @id @default(uuid())
  nome               String
  quantidade_animais Int
  tamanho            Int
  id_fazenda         String
  fazenda            Fazenda      @relation(fields: [id_fazenda], references: [id])
  Analise            Analise[]
  Dieta_lote         Dieta_Lote[]
}

model Analise {
  id            String   @id @default(uuid())
  imagem        String?
  resultado     Float
  disposicao    String
  manejo        String
  comportamento String
  clima         String
  data          DateTime
  id_lote       String
  lote          Lote     @relation(fields: [id_lote], references: [id])

  @@index([id_lote], map: "Analise_id_lote_fkey")
}
